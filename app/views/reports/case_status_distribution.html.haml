.container-fluid
  .row
    .col-md-11.offset-md-1.mx-auto
      = link_to dashboard_path, class: 'd-inline' do
        %i.fa.fa-arrow-left
        Back to Dashboard
      %br/
      %br/
      %h2 Case Status Distribution
      %hr.mb-4
      %table.table.table-bordered.table-responsive.text-center
        %thead.bg-dark.text-w
          %tr
            %th Case Status
            %th Total Cases
        %tbody
          - @cases.each do |status, count|
            %tr
              %td= status.capitalize
              %td= count

      .btn-group
        = link_to case_status_distribution_reports_path(format: :csv), class: 'btn btn-outline-secondary btn-sm d-inline' do
          %i.fa.fa-download
          Download CSV
        = link_to case_status_distribution_reports_path(format: :pdf), class: 'btn btn-outline-primary btn-sm ms-2' do
          %i.fa.fa-download
          Download PDF
%br/
%br/


:css
  .table th {
    background-color: #0077cc;
    color: white;
  }
