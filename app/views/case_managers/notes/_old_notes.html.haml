  .row
    .col-md-9.offset-md-1.mx-auto
      = link_to 'Notes', { tab: 'note' }, class: 'btn btn-outline-secondary me-2'
      = link_to 'Appointments', { tab: 'issue' }, class: 'btn btn-outline-secondary'   
      .card.p-4{style: "border-radius: 0; border-top: 0; overflow-x: auto;"}
        - if params[:tab] == 'issue'
          = render 'case_managers/notes/appointment'
        - else
          = render 'case_managers/notes/note'
