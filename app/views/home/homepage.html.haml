= stylesheet_link_tag('homepage.css')

.card{class: "#{user_signed_in? ? 'signed-in' : 'signed-out shadow-sm'}"}
  .text-center.m-2.display-2
    Welcome
    - if user_signed_in?
      , #{current_user.first_name.capitalize}!
      .display-6{style: 'text-align: right; font-size: 16px;'}
        (#{current_user.role_type.gsub('_',' ').capitalize})
    - else
      = link_to "Login", new_user_session_path, :class => "btn btn-secondary d-block m-4"
      = link_to "Register", new_user_registration_path, :class => "btn btn-primary d-block m-4"
